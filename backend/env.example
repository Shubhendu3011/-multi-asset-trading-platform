# Database Configuration
DATABASE_URL="postgresql://trading_user:trading_password@localhost:5432/trading_platform"
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External API Keys
# Crypto APIs
COINGECKO_API_KEY=your_coingecko_api_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Stock APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here
EMAIL_FROM=noreply@tradingplatform.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:3000

# Trading Configuration
MIN_ORDER_AMOUNT=10
MAX_ORDER_AMOUNT=1000000
TRADING_FEE_PERCENTAGE=0.1
WITHDRAWAL_FEE_PERCENTAGE=0.5

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Feature Flags
ENABLE_CRYPTO_TRADING=true
ENABLE_STOCK_TRADING=true
ENABLE_SOCIAL_TRADING=false
ENABLE_LEVERAGE_TRADING=false

# Development
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_PRISMA_STUDIO=true 